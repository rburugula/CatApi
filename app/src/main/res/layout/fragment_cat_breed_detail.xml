<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".CatBreedDetailFragment">

    <TextView
        android:id="@+id/tvHName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:text="@string/name"
        app:layout_constraintLeft_toRightOf="@+id/tvHName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHTemperament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperament"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHName" />

    <TextView
        android:id="@+id/tvTemperament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/temperament"
        app:layout_constraintLeft_toRightOf="@+id/tvHTemperament"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvHWikiUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/wikiUrl"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHTemperament" />

    <TextView
        android:id="@+id/tvWikiUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:autoLink="web"
        android:text="@string/wikiUrl"
        app:layout_constraintLeft_toRightOf="@+id/tvHWikiUrl"
        app:layout_constraintTop_toBottomOf="@+id/tvHTemperament" />

    <TextView
        android:id="@+id/tvHEnergyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/energyLevel"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWikiUrl" />

    <TextView
        android:id="@+id/tvEnergyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="@string/energyLevel"
        app:layout_constraintLeft_toRightOf="@+id/tvHEnergyLevel"
        app:layout_constraintTop_toBottomOf="@+id/tvWikiUrl" />

</androidx.constraintlayout.widget.ConstraintLayout>